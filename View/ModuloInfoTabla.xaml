<metro:MetroWindow x:Class="RegimenCondominio.V.ModuloInfoTabla"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:scroll="clr-namespace:SoftwareArchitects.Windows.Controls"
        xmlns:cscontrol ="clr-namespace:RegimenCondominio.UserControls"
        xmlns:model="clr-namespace:RegimenCondominio.M"
        xmlns:local="clr-namespace:RegimenCondominio.V"
        mc:Ignorable="d"
        Title="Información de la Tabla" Height="650" Width="1200" MinWidth="1200" MinHeight="600"  TitleCaps="False"
        ResizeMode="CanResize"     
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/RegimenCondominio;component/Images/JaverIcono.png"
        Loaded="MetroWindow_Loaded"                
        Closing="MetroWindow_Closing"
        Name="UI">
    <Window.Resources>

        <ResourceDictionary>
            <!--ACCENT COLORS-->
            <SolidColorBrush x:Key="HighlightBrush" Color="#6cb1e6"/>
            <SolidColorBrush x:Key="AccentBaseColorBrush" Color="#6cb1e6" />

            <SolidColorBrush x:Key="AccentColorBrush" Color="#6cb1e6" />
            <SolidColorBrush x:Key="AccentColorBrush2" Color="#6cb1e6" />
            <SolidColorBrush x:Key="AccentColorBrush3" Color="#6cb1e6" />
            <SolidColorBrush x:Key="AccentColorBrush4" Color="#6cb1e6"/>

            <SolidColorBrush x:Key="WindowTitleColorBrush" Color="#00897B" />

            <SolidColorBrush x:Key="MetroDataGrid.HighlightBrush" Color="#6cb1e6"/>

            <Image x:Key="GoBack" Source="pack://application:,,,/RegimenCondominio;component/Images/NewGoBack.png"                    
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <BitmapImage x:Key="Fondo" UriSource="pack://application:,,,/RegimenCondominio;component/Images/fondo.png" />

            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
                <!-- Accent and AppTheme setting -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Teal.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource Fondo}"></ImageBrush>
        </Grid.Background>

        <!--GRID ROW 0-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="103*"/>
                <RowDefinition Height="47*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="LightGray" BorderThickness="1" Grid.Row="0" Margin="5" Grid.Column="0"
               CornerRadius="2" Grid.RowSpan="2" x:Name="bPaso0">
                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="53*"/>
                        <ColumnDefinition Width="43*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Border BorderBrush="Black" BorderThickness="0,0,0,1" 
                                Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                Background="Transparent" Grid.ColumnSpan="2" Width="288">
                        <TextBlock Text="1. Lotes con calle a espaldas de Rumbo de Frente"
                               FontWeight="DemiBold" Foreground="#00897B" Height="19" 
                                       VerticalAlignment="Top" x:Name="txtPaso0" Width="477" />
                    </Border>
                    <TextBlock x:Name="txtCalleInversa" Text="Sin Asignar" HorizontalAlignment="Left" Foreground="Black"
                               Margin="5,0,0,1" Height="16" FontWeight="DemiBold" VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="txtRumboInverso" Text="Sin Asignar" HorizontalAlignment="Left" Foreground="Black"
                               Margin="5,5,0,6" FontWeight="DemiBold" Grid.Row="1"/>
                    <StackPanel Orientation="Vertical" Grid.Row="2" VerticalAlignment="Top" Height="43">
                        <TextBlock Text="Filtrar por" HorizontalAlignment="Left"
                               Margin="5,0,0,1" Height="16" Width="65"/>
                        <ComboBox x:Name="cmbAsignadoPor" Grid.Row="2" Width="90" HorizontalAlignment="Left"
                              VerticalAlignment="Top" Height="25" Margin="5,0,1,0" Background="White" SelectionChanged="cmbAsignadoPor_SelectChanged"/>
                    </StackPanel>

                    <CheckBox HorizontalAlignment="Right" Grid.Row="0" Grid.Column="1" Height="25" Name="checkAll"
                              VerticalAlignment="Bottom" FlowDirection="RightToLeft" Margin="0,0,5,0"
                              Checked="checkAll_Checked" Unchecked="checkAll_Unchecked">
                        <CheckBox.Content>
                            <TextBlock Text="Marcar Todo" VerticalAlignment="Bottom"/>
                        </CheckBox.Content>
                    </CheckBox>
                    <ListBox Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Height="80" Name="lBoxLoteCalle"
                             Grid.RowSpan="2" Grid.Column="1" Background="White" VerticalAlignment="Top" Margin="5,2,5,2">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked}" 
                                          Content="{Binding Path=Item.Name}" FlowDirection="RightToLeft" HorizontalAlignment="Left"
                                          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </Border>
            <Border x:Name="bPaso1" BorderBrush="LightGray" BorderThickness="1" Grid.Row="0" Margin="5" Grid.Column="1"
               CornerRadius="2" Grid.RowSpan="2" IsEnabled="False">
                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border BorderBrush="Black" BorderThickness="0,0,0,1" 
                                Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                Background="Transparent" Grid.ColumnSpan="2" Width="338">
                        <TextBlock x:Name="txtPaso1"
                    		FontWeight="DemiBold" Foreground="#00897B" Height="19" 
                    		VerticalAlignment="Top" Width="477" Text="2. Llenado de la Tabla"/>
                    </Border>
                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="1"                                
                                Background="Transparent" Grid.Column="0">
                                <StackPanel HorizontalAlignment="Center" Margin="1,8,1,1">
                                    <TextBlock x:Name="txtLotesBase" Foreground="LightGray"
                                        Text="Lote Regular e Irregular" FontWeight="DemiBold" 
                                               />
                                    <ComboBox x:Name="cmbLotesBase" SelectionChanged="cmbLotesBase_SelectChanged"
                                                          Width="150" />
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1"                                
                                Background="Transparent" Grid.Column="1">
                                <StackPanel HorizontalAlignment="Center" Margin="1,8,1,1">
                                    <TextBlock Text="Lotes Tipo" FontWeight="DemiBold" 
                                               x:Name="txtLotesTipo" Foreground="LightGray"/>
                                    <ComboBox  x:Name="cmbLotesTipo"
                                                           Width="150" SelectionChanged="cmbLotesTipo_SelectChanged"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Grid.Row="2"                                
                                Background="Transparent" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                    VerticalAlignment="Center" Margin="10,0,0,0">
                                <TextBlock Text="Lote Actual es: " FontWeight="DemiBold" Foreground="LightGray"
                                               Visibility="Visible" Margin="0,0,5,0" x:Name="lblLoteActual"/>
                                <TextBlock Text="Sin Asignar" FontWeight="DemiBold" Foreground="LightGray"
                                               Visibility="Visible" Margin="0,0,0,0" x:Name="txtTipoLoteActual"/>

                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
            </Border>

            <Border BorderBrush="#D8D8D8" CornerRadius="5" Grid.Column="2" x:Name="tb2BordDtInicial"
                        BorderThickness="1" Background="Transparent" Margin="10,5,10,5"
                        IsEnabled="False" Grid.Row="0">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="105*"/>
                        <ColumnDefinition Width="217*"/>
                        <ColumnDefinition Width="137*"/>
                        <ColumnDefinition Width="61*"/>
                    </Grid.ColumnDefinitions>
                    <!--D8D8D8-->
                    <Border BorderBrush="Black" BorderThickness="0,0,0,1" 
                                Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                Background="Transparent" Grid.ColumnSpan="4">
                        <TextBlock Text="Datos Generales"
                               FontWeight="DemiBold" Foreground="#00897B" Height="19" 
                                       VerticalAlignment="Top" x:Name="txtDetalleInicial" Width="1000"/>
                    </Border>
                    <!--FRACCIONAMIENTO-->
                    <TextBlock Text="Fraccionamiento: " Grid.Row="1" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"  Margin="3,0,0,3" Height="16"/>
                    <TextBlock x:Name="txtFraccionamiento" Text="Sin Asignar" Grid.Row="1"  Grid.Column="1" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <!--FIN FRACCIONAMIENTO-->

                    <!--MANZANA-->
                    <TextBlock Text="Manzana: " Grid.Row="2" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <TextBlock Text="Sin Asignar" Grid.Row="2"  Grid.Column="1" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" x:Name="txtManzana" Height="16"/>
                    <!--FIN MANZANA-->
                    <!--RUMBO DE FRENTE-->
                    <TextBlock Text="Rumbo de Frente" Grid.Row="3" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <TextBlock x:Name="txtRumboFrente" Text="Sin Asignar" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <!--FIN RUMBO DE FRENTE-->

                    <!--NO. DE LOTES-->
                    <TextBlock Text="# de Lotes" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <TextBlock x:Name="txtNoLotes" Text="0" Grid.Row="1" Grid.Column="3"  HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <!--FIN NO. DE LOTES-->

                    <!--NO. DE APS-->
                    <TextBlock Text="# de Apartamentos " Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <TextBlock x:Name="txtNoApartamentos" Text="0" Grid.Row="2" Grid.Column="3"  HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <!--NO. DE APS-->

                    <!--NO. DE EDIFICIOS-->
                    <TextBlock Text="# de Edificios " Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3" Height="16"/>
                    <TextBlock x:Name="txtNoEdificios" Text="0" Grid.Row="3" Grid.Column="3"  HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom" Margin="3,0,0,3"  Height="16"/>
                    <!--NO. DE EDIFICIOS-->
                </Grid>
            </Border>
            <!--  <Border BorderBrush="#D8D8D8" CornerRadius="5" Grid.Column="2"
                        BorderThickness="1" Background="Transparent" Margin="10,5,10,5"
                        IsEnabled="False" Grid.Row="1">-->
            <Grid Grid.Row="1"  Margin="10,5,10,5" Grid.Column="2">
                <ToolBar BorderBrush="LightGray" BorderThickness="1">
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" 
                                  Margin="0,0,10,0" BorderThickness="0,0,0,0" Click="btnRevisarLoteActual_Click" 
                                      x:Name="btnRevisarLoteActual">
                            <MenuItem.Header>
                                <DockPanel Background="Transparent">
                                    <Image Height="20" VerticalAlignment="Center" Margin="0,0,3,0"
                                           Source="pack://application:,,,/RegimenCondominio;component/Images/ok.png"
                                           ></Image>
                                    <TextBlock FontWeight="DemiBold" Text="Revisar" Margin="2" HorizontalAlignment="Center"
                                               VerticalAlignment="Center"></TextBlock>
                                </DockPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center"                                   
                                  Margin="0,0,10,0" BorderThickness="0,0,0,0">
                            <MenuItem.Header>
                                <DockPanel Background="Transparent" VerticalAlignment="Center">
                                    <TextBlock FontWeight="DemiBold" Text="Exportar" Margin="2" HorizontalAlignment="Center"
                                               VerticalAlignment="Center"></TextBlock>
                                    <Image Height="10" VerticalAlignment="Center"
                                           Source="pack://application:,,,/RegimenCondominio;component/Images/arrowDown.png"
                                           ></Image>
                                </DockPanel>
                            </MenuItem.Header>
                            <MenuItem Height="30" Background="Transparent" BorderBrush="Transparent" x:Name="btnExportarAutocad"
                                      Click="btnExportarAutocad_Click">
                                <MenuItem.Header>
                                    <DockPanel Background="Transparent">
                                        <Image Height="30" VerticalAlignment="Center"
                                           Source="pack://application:,,,/RegimenCondominio;component/Images/autodeskIcon.png"
                                           ></Image>
                                        <Label>Autocad</Label>
                                    </DockPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem Height="30" Background="Transparent" BorderBrush="Transparent"
                                      x:Name="btnExportarExcel" Click="btnExportarExcel_Click">
                                <MenuItem.Header>
                                    <DockPanel Background="Transparent">
                                        <Image VerticalAlignment="Center" Height="30"
                                           Source="pack://application:,,,/RegimenCondominio;component/Images/excelNew.png"
                                           ></Image>
                                        <Label>Excel</Label>
                                    </DockPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem Height="30" Background="Transparent" BorderBrush="Transparent"
                                      x:Name="btnExportarDocActual" Click="btnExportarDocActual_Click">
                                <MenuItem.Header>
                                    <DockPanel Background="Transparent">
                                        <Image VerticalAlignment="Center" Height="30"
                                           Source="pack://application:,,,/RegimenCondominio;component/Images/word2016.png"
                                           ></Image>
                                        <Label>Lote Actual</Label>
                                    </DockPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem Height="30" Background="Transparent" BorderBrush="Transparent"
                                      x:Name="btnExportarTodosDoc" Click="btnExportarTodosDoc_Click">
                                <MenuItem.Header>
                                    <DockPanel Background="Transparent">
                                        <Image VerticalAlignment="Center" Height="30"
                                           Source="pack://application:,,,/RegimenCondominio;component/Images/word2016.png"
                                           ></Image>
                                        <Label>Todos</Label>
                                    </DockPanel>
                                </MenuItem.Header>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" 
                                  Margin="0,0,10,0" BorderThickness="0,0,0,0" Visibility="Collapsed">
                            <MenuItem.Header>
                                <DockPanel Background="Transparent" VerticalAlignment="Center">
                                    <TextBlock FontWeight="DemiBold" Text="Columnas" Margin="2" HorizontalAlignment="Center"
                                               VerticalAlignment="Center"></TextBlock>
                                    <Image Height="10" VerticalAlignment="Center"
                                           Source="pack://application:,,,/RegimenCondominio;component/Images/arrowDown.png"
                                           ></Image>
                                </DockPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem Background="Transparent" BorderBrush="Transparent" x:Name="btnLimpiar" Click="btnLimpiar_Click"
                                  VerticalAlignment="Center" Margin="0,0,15,0" BorderThickness="0,0,0,0">
                            <MenuItem.Header>
                                <DockPanel>
                                    <Image VerticalAlignment="Center" Height="20"
                                                       Source="pack://application:,,,/RegimenCondominio;component/Images/deleteGreen.png" Margin="0,0,3,0"/>
                                    <TextBlock Text="Limpiar" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold"/>
                                </DockPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem Background="Transparent" BorderBrush="Transparent" 
                                  VerticalAlignment="Center" Margin="0,0,10,0" BorderThickness="0,0,0,0"
                                  Click="irInicio_Click" x:Name="irInicio">
                            <MenuItem.Header>
                                <DockPanel>
                                    <Image VerticalAlignment="Center" Height="20"
                                                       Source="pack://application:,,,/RegimenCondominio;component/Images/HomeGreen.png" Margin="0,0,3,0"/>
                                    <TextBlock Text="Inicio" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold"/>
                                </DockPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem Background="Transparent" BorderBrush="Transparent" x:Name="toolBProgress" Visibility="Hidden"
                                  VerticalAlignment="Center" Margin="0,0,10,0" BorderThickness="0,0,0,0" IsHitTestVisible="False">
                            <MenuItem.Header>
                                <DockPanel>
                                    <metro:ProgressRing VerticalAlignment="Center" Height="20" Width="30" Margin="0,0,3,0"/>
                                    <TextBlock Text="Cargando.." HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold"/>
                                </DockPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </Menu>
                </ToolBar>
            </Grid>
            <!-- </Border>-->
            <!--
                <Grid >
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2"
                           Text="Información General" FontWeight="DemiBold" Foreground="#00897B"/>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Manzana" Margin="5" VerticalAlignment="Center" FontWeight="DemiBold"
                           Grid.Row="1" Grid.Column="0"></TextBlock>
                    <TextBox IsEnabled="False" Margin="2" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="25"></TextBox>
                   
                    <TextBlock Text="Número de Lote" Margin="5" VerticalAlignment="Center" FontWeight="DemiBold"
                           Grid.Row="2" Grid.Column="0"></TextBlock>
                    <ComboBox Margin="2" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="25"></ComboBox>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Exportar" Grid.Row="1" Grid.Column="1"></Button>
                </Grid>
                 -->
        </Grid>


        <!--GRID ROW 1-->
        <Border BorderBrush="LightGray" BorderThickness="0,5,0,5" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                  scroll:ScrollSynchronizer.ScrollGroup="Group1"
                                  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0">
                            <Border BorderBrush="#A4A4A4" BorderThickness="1">
                                <TextBlock x:Name="txtDGVDatosLote" Text="DATOS LOTE ACTUAL" Width="350"  FontWeight="DemiBold" TextAlignment="Center"
                                   Background="LightBlue"></TextBlock>
                            </Border>
                        </StackPanel>
                        <DataGrid Name="dtHeader" IsHitTestVisible="False" CanUserSortColumns="False"
                                      Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                              HorizontalGridLinesBrush="LightGray"
                              VerticalGridLinesBrush="Black" GridLinesVisibility="Horizontal" Background="Transparent">
                            <DataGrid.Columns>
                                <DataGridTextColumn  Width="170" Binding="{ Binding Calle}" 
                                                 IsReadOnly="True" x:Name="ColCalle">
                                    <DataGridTextColumn.Header>
                                        <TextBlock Text="Calle"></TextBlock>
                                    </DataGridTextColumn.Header>
                                </DataGridTextColumn>
                                <DataGridTextColumn  Width="80" Binding="{ Binding NoOficial}" 
                                                 IsReadOnly="True" x:Name="ColNoOficial">
                                    <DataGridTextColumn.Header>
                                        <TextBlock Text="No. Oficial"></TextBlock>
                                    </DataGridTextColumn.Header>
                                </DataGridTextColumn>
                                <DataGridTextColumn  Width="80" Binding="{ Binding NumEdificio}" 
                                                 IsReadOnly="True" x:Name="ColEdificio" Visibility="Collapsed">
                                    <DataGridTextColumn.Header>
                                        <TextBlock Text="Edificio"></TextBlock>
                                    </DataGridTextColumn.Header>
                                </DataGridTextColumn>
                                <DataGridTextColumn  Width="100" Binding="{Binding Apartamento}" 
                                                 IsReadOnly="True" x:Name="ColApartamento">
                                    <DataGridTextColumn.Header>
                                        <TextBlock Text="AP"></TextBlock>
                                    </DataGridTextColumn.Header>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="2">
                            <Border BorderBrush="LightGray" BorderThickness="1">
                                <TextBlock Text="Total" Width="350"  FontWeight="DemiBold" TextAlignment="Center"
                                   Background="LightGray"></TextBlock>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Visible" scroll:ScrollSynchronizer.ScrollGroup="Group1"
                              Grid.Row="0" HorizontalAlignment="Left" Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0">
                            <Border BorderBrush="#A4A4A4" BorderThickness="1,1,0,1" Width="700" x:Name="bordCubierto">
                                <TextBlock Text="ÁREA TOTAL CUBIERTA" FontWeight="DemiBold" TextAlignment="Center"
                                   Background="LightBlue"></TextBlock>
                            </Border>
                            <Border BorderBrush="#A4A4A4" BorderThickness="1" Width="500" x:Name="bordDescubierto">
                                <TextBlock Text="ÁREA TOTAL DESCUBIERTA" FontWeight="DemiBold" TextAlignment="Center"
                                   Background="LightBlue"></TextBlock>
                            </Border>
                            <Border BorderBrush="#A4A4A4" BorderThickness="1,1,0,1" Width="200">
                                <TextBlock Text="" FontWeight="DemiBold" TextAlignment="Center"
                                   Background="Transparent"></TextBlock>
                            </Border>
                            <Border BorderBrush="#A4A4A4" BorderThickness="0,1,0,1" Visibility="Collapsed" Width="100" x:Name="bordAreaExcl">
                                <TextBlock Text="" FontWeight="DemiBold" TextAlignment="Center"
                                   Background="Transparent"></TextBlock>
                            </Border>
                            <Border BorderBrush="LightGray" BorderThickness="0,1,1,1" Width="100">
                                <TextBlock Text="" FontWeight="DemiBold" TextAlignment="Center"
                                   Background="Transparent"></TextBlock>
                            </Border>
                            <Border BorderBrush="#A4A4A4" BorderThickness="1" Width="300">
                                <TextBlock Text="DATOS DEL PREDIO" FontWeight="DemiBold" TextAlignment="Center"
                                   Background="LightBlue"></TextBlock>
                            </Border>
                            <Border BorderBrush="#A4A4A4" BorderThickness="1" Width="250">
                                <TextBlock Text="" FontWeight="DemiBold" TextAlignment="Center"
                                   Background="Transparent"></TextBlock>
                            </Border>
